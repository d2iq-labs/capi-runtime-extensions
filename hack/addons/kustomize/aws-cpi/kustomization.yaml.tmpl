apiVersion: kustomize.config.k8s.io/v1beta1
kind: Kustomization

metadata:
  name: aws-cpi-kustomize

resources:
- ${AWS_CPI_FROM_HELM_FILE}

patches:
- patch: |-
    - op: add
      path: /spec/template/spec/containers/0/args/-
      value: --configure-cloud-routes=false
  target:
    kind: DaemonSet
